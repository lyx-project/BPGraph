{
  "extends": [
    "stylelint-config-standard",
    "stylelint-config-tailwindcss"
  ],
  "plugins": ["stylelint-order"],
  "rules": {
    "order/properties-alphabetical-order": true,
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": [
          "source",
          "tailwind",
          "apply",
          "theme",
          "layer",
          "variant",
          "custom-variant",
          "responsive",
          "screen",
          "reference",
          "utility",
          "config"
        ]
      }
    ],
    "import-notation": "string"
  },
  "ignoreFiles": [
    "**/node_modules/**",
    "**/dist/**",
    "**/*",
    "!packages/vue/**/*",
    "!packages/react/**/*"
  ],
  "overrides": [
    {
      "files": ["packages/vue/**/*.vue", "packages/vue/**/*.css"],
      "extends": [
        "stylelint-config-standard",
        "stylelint-config-recommended-vue",
        "stylelint-config-tailwindcss"
      ],
      "rules": {
      }
    }
  ]
}